@page "{bookId:int?}"
@model BookStore.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Book.Name</h2>
<form method="post">
    <input type="hidden" asp-for="Book.Id" />
    <div class="form-group">
        <label asp-for="Book.Name"></label>
        <input asp-for="Book.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Book.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Author"></label>
        <input asp-for="Book.Author" class="form-control" />
        <span class="text-danger" asp-validation-for="Book.Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Type"></label>
        <select class="form-control" asp-for="Book.Type"
                asp-items="Model.Types"></select>
        <span class="text-danger" asp-validation-for="Book.Type"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

